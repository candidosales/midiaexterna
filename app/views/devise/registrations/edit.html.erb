
                    <div class="widget widget-simple">
                      <div class="widget-header">
                        <h4><i class="fontello-icon-user"></i> Editar Usuário </h4>
                      </div>
                      <div class="widget-content">
                        <div class="form-dark">

                          <%= simple_form_for(resource, :as => resource_name , :url => registration_path(resource_name), :html => {:multipart => true,  :method => :put,:class => 'form-horizontal' }) do |f| %>
                          <%= f.error_notification %>
                          <fieldset>
                            <ul class="form-list label-left list-bordered dotted">
                              <li class="control-group">
                                <label class="control-label" for="accountPrefix">Nome</label>
                                <div class="controls">
                                  <%= f.text_field :nome, :autofocus => true %>
                                </div>
                              </li>
                                 <li class="control-group">
                                  <label class="control-label" for="accountPrefix">Enviar fotos</label>
                                  <div class="controls">
                                   <div class="fileupload fileupload-new pull-left" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 50px; height: 50px;"> 
                                      <% unless @usuario.avatar.blank? %>
                                            <%= image_tag @usuario.avatar.url(:small) %>
                                          <% end %>
                                    </div>
                                      <div class="fileupload-preview fileupload-exists thumbnail" style="width: 50px; height: 50px;">

                                      </div>
                                      
                                      <span class="btn btn-file" style="vertical-align:top">
                                         <span class="fileupload-new">Selecionar imagem</span> 
                                        <span class="fileupload-exists">Mudar</span>
                                      <%= f.file_field :avatar, :class => 'foto_outdoor_input'  %>  
                                    </span>
                                    <a href="#" class="btn btn-red fileupload-exists" data-dismiss="fileupload" style="vertical-align:top">Remover</a>
                                  </div>
                                </div>
                              </li>
                              <li class="control-group">
                                <label class="control-label" for="accountPrefix">E-mail</label>
                                <div class="controls">
                                  <%= f.text_field :email, :required => false, :autofocus => true %>
                                </div>
                              </li>
                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <li class="control-group">

                                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>

                              </li>
                              <% end %>
                              <li class="control-group">
                                <label class="control-label" for="accountPrefix">Senha</label>
                                <div class="controls">
                                  <%= f.password_field :password, :autocomplete => "off", :required => false %>
                                  <span class="hint">deixar em branco se você não quiser mudá-lo</span>
                                </div>
                              </li>
                              <li class="control-group">
                                <label class="control-label" for="accountPrefix">Confirme a senha</label>
                                <div class="controls">
                                  <%= f.password_field :password_confirmation, :required => false %>
                                </div>
                              </li>
                              <li class="control-group">
                                <label class="control-label" for="accountPrefix">Senha atual</label>
                                <div class="controls">
                                  <%= f.password_field :current_password, :required => true %>
                                  <span class="hint">precisamos de sua senha atual para confirmar as alterações</span>
                                </div>
                              </li>
                            </ul>
                          </fieldset>

                          <div class="form-actions">
                            <%= f.button :submit, "Atualizar", class: "btn btn-blue"  %>
                          </div>
                          <% end %>



                          

                        </div>
                      </div>
                    </div>
                    <div class="widget widget-simple">
                      <div class="widget-header">
                        <h4><i class="fontello-icon-user"></i> Cancelar conta </h4>
                      </div>
                      <div class="widget-content">
                        <p>Infelizmente? <%= link_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Você tem certeza?" }, :method => :delete %>.</p>

                        <%= link_to "Voltar", :back, class: "btn"  %>
                      </div>
                    </div>

