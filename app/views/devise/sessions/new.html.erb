           <div id="main-content" class="main-content container-fluid">

           	<!-- // page head -->

           	<div id="page-content" class="page-content">
           		<section>
           			<div class="row-fluid margin-top20">
           				<div class="span12">
           					<div class="widget widget-simple">
           						<div class="widget-header">
           							<h4><i class="fontello-icon-user"></i> Sign in</h4>
           						</div>
           						<div class="widget-content">
           							<div class="span12 form-dark">
           							<%= simple_form_for(resource, :html => {:class => 'form-horizontal' }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
           							<ul class="form-list label-left list-bordered dotted">
           								<li class="control-group">
           									<label class="control-label" for="accountPrefix">E-mail</label>
           									<div class="controls">
           										<%= f.text_field :email, :required => false, :autofocus => true %>
           									</div>
           								</li>
           								<li class="control-group">
           									<label class="control-label" for="accountPrefix">Senha</label>
           									<div class="controls">
           										<%= f.password_field :password, :required => false %>
           									</div>
           								</li>
           								<li class="control-group">
           									<label class="control-label" for="accountPrefix">Lembre-me</label>
           									<div class="controls">
           										<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
           									</div>
           								</li>
           								
           								
           								
           							</ul>

           							<div class="form-actions">
           								<%= f.submit  "My Submit Text",  class: "btn btn-blue"%>
           							</div>
           							<% end %>
           						</div>
           							<%= render "devise/shared/links" %>
           						</div>
           					</div>
           				</div>
           			</div>
           		</section>
           	</div>
