

           				<div class="span12">
           					<div class="widget widget-simple">
           						<div class="widget-header">
           							<h4><i class="fontello-icon-calendar"></i> Sign in</h4>
           						</div>
           						<div class="widget-content">
           							<div class="form-dark">

           								<%= simple_form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal' } , :url => session_path(resource_name)) do |f| %>
           								<fieldset>
           									<ul class="form-list label-left list-bordered dotted">
           										<li class="control-group">
           											<label class="control-label" for="accountPrefix">E-mail</label>
           											<div class="controls">
           												<%= f.text_field :email, :required => false, :autofocus => true %>
           											</div>
           										</li>
           										<li class="control-group">
           											<label class="control-label" for="accountPrefix">Senha*</label>
           											<div class="controls">
           												<%= f.password_field :password, :required => false %>
           												<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
           											</div>
           										</li>
           									</ul>
           								</fieldset>

           								<div class="form-actions">
           									<%= f.button :submit, "Sign in" %>
           								</div>
           								<% end %>

           								<%= render "devise/shared/links" %>
           							</div>
           						</div>
           					</div>
           				</div>


