  <hr/>
  <div class="form-dark">
    <%= form_for [:admin, @reserva] do |f| %>

    <div class="widget widget-box widget-table">
      <div class="widget-header">
        <h4><i class="aweso-icon-table"></i> Outdoors disponíveis</h4>
      </div>
      <table class="table table-striped table-condensed table-content boo-table">
        <thead>
          <tr>
            <th class="check-col" scope="col"></th>
            <th>Número</th>
            <th>Endereço</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>Valor</th>
            <th>Sentido</th>
          </tr>
        </thead>
        <% @outdoors.each do |outdoor| %>
        <tr>
          <td>
            <label>
            <input id="<%= outdoor.id %>" type="checkbox" name="reserva[outdoor_ids][]" value="<%= outdoor.id %>" class="checkbox">
          </label>
          </td>
          <td><%= outdoor.numero %></td>
          <td><%= outdoor.endereco %></td>
          <td><%= outdoor.bairro %></td>
          <td><%= outdoor.cidade %></td>
          <td>R$ <span class="valor-<%= outdoor.id %>"><%=outdoor.valor %></span></td>
          <td><%= outdoor.sentido %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="controls controls-row">
      <%= f.collection_select :cliente_id, Cliente.all, :id, :nome,  {:prompt => 'Selecione o cliente'},{:class => 'selecttwo-s span3'} %>
      <%= f.text_field :campanha, :placeholder => "Nome da campanha", :class => 'span3'%>
      <input id="valor" type="text" placeholder="R$ 0,00" class="span3" name="valor" disabled   >

    </div>
    <%= f.hidden_field :valor %>
    <%= f.hidden_field :inicio_reserva %>
    <%= f.hidden_field :termino_reserva %>
    <%= f.hidden_field :usuario_id, :value => current_usuario.id %>

    <div class="form-actions">
     <%= f.submit :class => "btn btn-green" %> 
   </div>
 <% end %>
    <%= form_tag({:action => 'send_email_available_outdoors'}, :id => "tool-form", :remote => true,:'data-update-target' => 'outdoors_available', :html => {:class => 'form-horizontal' } ) do %>
      <%= submit_tag("Enviar e-mail com as disponiveis", :class => "btn btn-green") %>
        <%= hidden_field_tag :outdoors %>
        <%= hidden_field_tag :inicio_reserva %>
        <%= hidden_field_tag :termino_reserva %>
        <%= hidden_field_tag :cliente_id %>
        <%= hidden_field_tag :usuario_id %>
    <% end %>
</div>
