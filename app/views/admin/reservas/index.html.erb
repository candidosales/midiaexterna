
 
                    <div class="widget widget-box widget-table">
                      <div class="widget-header">
                        <h4><i class="fontello-icon-calendar"></i> Listagem</h4>
                      </div>
                      <table class="table table-striped table-condensed table-content boo-table">
                        <tr>
                          <th>Campanha</th>
                          <th>Cliente</th>
                          <th>Início</th>
                          <th>Término</th>
                          <th>Criado por</th>
                          <th>Valor</th>
                          <th></th>
                        </tr>

                        <% @reservas.each do |reserva| %>
                        <tr>
                          <td><%= link_to reserva.campanha, [:admin, reserva] %> <%= status_reserva(reserva.status) %></td>
                          <td><%= "#{reserva.cliente.nome} / #{reserva.cliente.empresa}" %></td>
                          <td><%= reserva.inicio_reserva.strftime("%d/%m/%Y") %></td>
                          <td><%= reserva.termino_reserva.strftime("%d/%m/%Y") %></td>
                          <td><%= "#{reserva.usuario.nome} | #{reserva.created_at.strftime('%d/%m/%Y - %H:%M:%S')}" %></td>
                          <td><%= humanized_money_with_symbol reserva.valor %></td>
                          <td><%= link_to 'Editar', edit_admin_reserva_path(reserva), class: "btn btn-blue btn-mini" %>
                            <%= link_to 'Apagar', [:admin, reserva], method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-yellow btn-mini" %></td>
                          </tr>
                          <% end %>
                        </table>
                        <div class="widget-footer">
                          <div class="btn-toolbar pull-left">
                            <%= link_to 'Nova Reserva', new_admin_reserva_path, class: "btn btn-blue" %>
                          </div>
                        </div>

                      </div>                           
           
