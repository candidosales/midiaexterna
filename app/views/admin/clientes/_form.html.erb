<div class="form-dark">
  <%= form_for [:admin, @cliente], :html => {:class => 'form-horizontal' } do |f| %>
  <%= error_messages_for @cliente %>
  
  <fieldset>
    <ul class="form-list label-left list-bordered dotted">
      <li class="section-form">
        <h4>Dados pessoais</h4>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Nome*</label>
        <div class="controls">
          <%= f.text_field :nome, :placeholder => "", :require => true %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">CPF</label>
        <div class="controls">
          <%= f.text_field :cpf, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">E-mail*</label>
        <div class="controls">
          <%= f.text_field :email, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Telefone</label>
        <div class="controls">
          <%= f.text_field :tel, :placeholder => "" %>
        </div>
      </li>
    </ul>
  </fieldset>
  <fieldset>
    <ul class="form-list label-left list-bordered dotted">
      <li class="section-form">
        <h4>Dados da empresa</h4>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Empresa</label>
        <div class="controls">
          <%= f.text_field :empresa, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Razão Social</label>
        <div class="controls">
          <%= f.text_field :razao, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">CNPJ</label>
        <div class="controls">
          <%= f.text_field :cnpj, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Endereço</label>
        <div class="controls">
          <%= f.text_field :endereco, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Bairro</label>
        <div class="controls">
          <%= f.text_field :bairro, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Cidade</label>
        <div class="controls">
          <%= f.text_field :cidade, :placeholder => "" %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Estado</label>
        <div class="controls">
          <%= f.select( :estado, {"AC"=>"Acre", "AL"=>"Alagoas", "AM"=>"Amazonas", "AP"=>"Amapá","BA"=>"Bahia","CE"=>"Ceará","DF"=>"Distrito Federal","ES"=>"Espírito Santo","GO"=>"Goiás","MA"=>"Maranhão","MT"=>"Mato Grosso","MS"=>"Mato Grosso do Sul","MG"=>"Minas Gerais","PA"=>"Pará","PB"=>"Paraíba","PR"=>"Paraná","PE"=>"Pernambuco","PI"=>"Piauí","RJ"=>"Rio de Janeiro","RN"=>"Rio Grande do Norte","RO"=>"Rondônia","RS"=>"Rio Grande do Sul","RR"=>"Roraima","SC"=>"Santa Catarina","SE"=>"Sergipe","SP"=>"São Paulo","TO"=>"Tocantins"}, { :class => 'select2-choice'}) %>
        </div>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">CEP</label>
        <div class="controls">
          <%= f.text_field :cep, :placeholder => "" %>
        </div>
      </li>
    </ul>
    </fieldset>
    <div class="form-actions">
      <%= f.submit class: "btn btn-blue" %> <%= link_to 'Voltar', admin_clientes_path, class: "btn" %>
    </div>
    <% end %>
  </div>
