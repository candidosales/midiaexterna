<h1>Listagem de clientes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Tel</th>
    <th>Cpf</th>
    <th>Cnpj</th>
    <th>Empresa</th>
    <th>Cidade</th>
    <th>Razao</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.tel %></td>
    <td><%= cliente.cpf %></td>
    <td><%= cliente.cnpj %></td>
    <td><%= cliente.empresa %></td>
    <td><%= cliente.cidade %></td>
    <td><%= cliente.razao %></td>
    <td><%= link_to 'Show', cliente %></td>
    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

