<div class="form-dark">
<%= form_for @reserva do |f| %>
<ul class="form-list label-left list-bordered dotted">
  <li class="section-form">
    <h4>Outdoors dispon√≠veis</h4>
  </li>
  <li class="control-group">
    <label class="control-label" for="accountPrefix">Outdoors</label>
    <div class="controls">
      <%= f.collection_check_boxes :outdoor_ids, @outdoors, :id, :full_title, :wrapper_html => { :class => 'options' } %>
    </div>
  </li>
  <li class="control-group">
    <label class="control-label" for="accountPrefix">Cliente</label>
    <div class="controls">
      <%= f.collection_select :cliente_id, Cliente.all, :id, :nome %>
    </div>
  </li>
  <li class="control-group">
    <label class="control-label" for="accountPrefix">Valor</label>
    <div class="controls">
      <div id="valor"></div>
      <%= f.hidden_field :valor %>
      <%= f.hidden_field :inicio_reserva %>
      <%= f.hidden_field :termino_reserva %>
    </div>
  </li>
  <hr/>
  <div class="form-actions">
  	<%= f.submit :class => "btn" %>
  </div>
</fieldset>
<% end %>
</div>