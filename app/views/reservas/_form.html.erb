<%= simple_nested_form_for(@reserva) do |f| %>
   <%= error_messages_for @reserva %>
<fieldset>
  <div class="five columns">
    <label>Cliente</label>
      <%= f.collection_select :cliente_id, Cliente.all, :id, :nome %>
  </div>
  <div class="five columns">
    <label>Início da reserva</label>
    <input type="text" id="inicio_periodo" name="inicio_periodo" value="<%= @reserva.inicio_reserva%>"/>
    <label>Término da reserva</label>
    <input type="text" id="termino_periodo" name="termino_periodo" value="<%= @reserva.termino_reserva%>"/>
    <label>Valor</label>
     <div id="valor"></div>
     <%= f.hidden_field :valor %>
  </div>
  <div class="twelve columns">
    <label>Outdoors da reserva</label>
    <%= f.collection_check_boxes :outdoor_ids, Outdoor.all, :id, :full_title, :wrapper_html => { :class => 'options' } %>

  </div>

  </fieldset>
  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>
