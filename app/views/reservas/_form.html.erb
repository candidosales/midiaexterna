<div class="form-dark">
  <%= simple_nested_form_for(@reserva) do |f| %>
  <%= error_messages_for @reserva %>

  <fieldset>
    <ul class="form-list label-left list-bordered dotted">
      <li class="section-form">
        <h4>Dados pessoais</h4>
      </li>
      <li class="control-group">
        <label class="control-label" for="accountPrefix">Cliente</label>
        <div class="controls">
         <%= f.collection_select :cliente_id, Cliente.all, :id, :nome %>
       </div>
     </li>
     <li>
       <div class="input-append">
        <label class="control-label" for="accountPrefix">Início da reserva</label>
        <input data-date-format="dd/mm/yy" type="text" id="inicio_periodo" name="inicio_periodo" class="span3" placeholder="Início" value="<%= @reserva.inicio_reserva.strftime("%d/%m/%Y")%>"/>
        <span class="add-on"><i class="fontello-icon-calendar"></i></span>
      </div>
    </li>
    <li>
      <div class="input-append">
        <label class="control-label" for="accountPrefix">Término da reserva</label>
        <input data-date-format="dd/mm/yy" type="text" id="termino_periodo" name="termino_periodo" class="span3" placeholder="Término" value="<%= @reserva.termino_reserva.strftime("%d/%m/%Y")%>"/>
        <span class="add-on"><i class="fontello-icon-calendar"></i></span>
      </div>
    </li>
    <li class="control-group">
      <label class="control-label" for="accountPrefix">Valor</label>
      <div class="controls">
       <input id="valor" type="text" value="<%= @reserva.valor %>" placeholder="R$ 0,00" class="span3" name="valor" disabled   >
       <%= f.hidden_field :valor %>
     </div>
   </li>
 </ul>
</fieldset>
<div class="widget widget-box widget-table">
  <div class="widget-header">
    <h4><i class="aweso-icon-table"></i> Outdoors disponíveis</h4>
  </div>
  <table class="table table-striped table-condensed table-content boo-table">
    <thead>
      <tr>
        <th class="check-col" scope="col"></th>
        <th>Número</th>
        <th>Endereço</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th>Valor</th>
        <th>Sentido</th>
      </tr>
    </thead>
    <% @reserva.outdoors.each do |outdoor| %>
    <tr>
      <td>
        <label>
          <input id="<%= outdoor.id %>" type="checkbox" name="reserva[outdoor_ids][]" value="<%= outdoor.id %>" class="checkbox" checked>
        </label>
      </td>
      <td><%= outdoor.numero %></td>
      <td><%= outdoor.endereco %></td>
      <td><%= outdoor.bairro %></td>
      <td><%= outdoor.cidade %></td>
      <td>R$ <span class="valor-<%= outdoor.id %>"><%=outdoor.valor %></span></td>
      <td><%= outdoor.sentido %></td>
    </tr>
    <% end %>
  </table>
</div>
  <div class="form-actions">
      <%= f.submit class: "btn btn-blue" %> <%= link_to 'Voltar', clientes_path, class: "btn" %>
    </div>
<% end %>
</div>
