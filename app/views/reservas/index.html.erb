<h1>Listando reservas</h1>

<table>
  <tr>
    <th>Cliente</th>
    <th>Início</th>
    <th>Término</th>
    <th>Criado em</th>
    <th>Valor</th>
    <th></th>
    <th></th>
  </tr>

<% @reservas.each do |reserva| %>
  <tr>
    <td><%= reserva.cliente.nome %></td>
    <td><%= reserva.inicio_reserva %></td>
    <td><%= reserva.termino_reserva %></td>
    <td><%= reserva.created_at %></td>
    <td><%= humanized_money_with_symbol reserva.valor %></td>
    <td><%= link_to 'Show', reserva %></td>
    <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
    <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New reserva', new_reserva_path %>
