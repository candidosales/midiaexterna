           <div id="main-content" class="main-content container-fluid">
            <!-- // page head -->

            <div id="page-content" class="page-content">
              <section>
                <div class="row-fluid margin-top20">
                  <div class="span12">
                    <div class="widget widget-simple">
                      <div class="widget-header">
                        <h4><i class="fontello-icon-user"></i> Nova reserva</h4>
                      </div>
                      <div class="widget-content">
                        <div class="form-dark">
                          <%= form_tag({:action => 'search_outdoor_available'}, :id => "tool-form", :remote => true,:'data-update-target' => 'outdoors_available', :html => {:class => 'form-horizontal' } ) do %>
                          <fieldset>
                           <legend>Qual o período da reserva?</legend>
                           <div class="input-append">
                                <input data-date-format="dd/mm/yy" type="text" id="inicio_periodo" name="inicio_periodo" class="span3" placeholder="Início"/>
                                <span class="add-on"><i class="fontello-icon-calendar"></i></span>
                             </div>
                          <div class="input-append">
                                <input data-date-format="dd/mm/yy" type="text" id="termino_periodo" name="termino_periodo" class="span3" placeholder="Término"/>
                                <span class="add-on"><i class="fontello-icon-calendar"></i></span>
                             </div>

                        </fieldset>
                        <%= submit_tag("Buscar", :class => "btn btn-blue") %><%= link_to 'Voltar', reservas_path, class: "btn" %>
                        <% end %>
                        <div id="outdoors_available">

                        </div>
                        <div id="loading" style="display: none">
                          <h2>Carregando</h2>
                        </div>

                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>





